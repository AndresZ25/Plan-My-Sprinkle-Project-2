<!-- messages.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Messages - Baby Shower</title>
</head>
<body>
    <header>
        <h1>Baby Shower Messages</h1>
    </header>

    <section>
        <h2>Send a Message</h2>
        <form id="sendMessageForm">
            <label for="recipientEmail">Recipient Email:</label>
            <input type="email" id="recipientEmail" name="recipientEmail" required>
            <label for="message">Message:</label>
            <textarea id="message" name="message" required></textarea>
            <button type="submit">Send Message</button>
        </form>
    </section>

    <section>
        <h2>Message History</h2>
        <ul>
            {{#each messages}}
                <li>
                    <strong>{{sender}} to {{recipient}}:</strong>
                    <p>{{text}}</p>
                    <small>{{formatDate sentAt}}</small>
                </li>
            {{else}}
                <li>No messages found.</li>
            {{/each}}
        </ul>
    </section>

    <footer>
        <p>&copy; 2025 Baby Shower Management</p>
    </footer>

    <script>
        // Sending a message
        document.getElementById('sendMessageForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const recipientEmail = document.getElementById('recipientEmail').value;
            const messageText = document.getElementById('message').value;

            fetch('/api/messages', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ recipientEmail, messageText })
            })
            .then(response => response.json())
            .then(data => alert('Message sent!'))
            .catch(error => alert('Error sending message.'));
        });
    </script>
</body>
</html>
